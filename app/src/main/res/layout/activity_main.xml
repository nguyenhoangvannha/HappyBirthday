<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/random_background"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:id="@+id/txt_wellcome"
        android:text="12A1 mãi yêu"
        android:textSize="60sp"
        android:textColor="#F50057"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/img_wellcome"
        android:src="@drawable/wellcome"
        android:padding="8dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="300dp" />
    <ImageButton
        android:id="@+id/btn_wellcome"
        android:src="@drawable/img_heart"
        android:background="@drawable/button_background"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:padding="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
